pipeline {
    agent any

    environment {
        DOCKER_HUB_USERNAME = 'amradel2002'
        IMAGE_NAME = "${amradel2002}/product-service:latest"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                dir('product-service') {
                    sh 'docker build -t ${amradel2002/product-service:latest} .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh 'echo $PASS | docker login -u $USER --password-stdin'
                    sh 'docker push ${amradel2002/product-service:latest}'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f product-service/product-deployment.yaml'
                sh 'kubectl apply -f product-service/product-service.yaml'
            }
        }
    }
}
